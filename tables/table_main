#!/bin/bash

check_name()
{
   regex="^[a-zA-Z#]{0,100}$" 
    if [[ $1 =~ $regex ]]
    then 
          echo true
    else
         echo false
   fi

}


if [[ $# -eq 1 ]]
  then 
        
        select item in  "Create Table"  "List Tables"  "Drop Table"  "Insert into Table"  "Select From Table"  "Delete From Table"  "Update Table" "Exit"
        do 
        case $item in
            "Create Table") . table_create $1
            ;;
            "List Tables") . table_list $1
            ;;
            "Drop Table") . table_drop $1
            ;;
            "Insert into Table")  . table_insert $1
                  
            ;;
            "Select From Table")  . table_select $1
                  
            ;;
            "Delete From Table")  . table_delete $1
                  
            ;;
            "Update Table")  . table_update $1
                  
            ;;
            "Exit")
              break 
              ;;
            *)
              echo "Invild option"
              ;; 
        esac



        done 

  fi

