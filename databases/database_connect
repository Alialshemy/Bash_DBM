#!/bin/bash
############ this script connect to database if exit ##################

###this functions check if database exit or not
urls=mydatabase
check()
{
      
     if [[ `check_name $1` = 'true' ]]
      then 
          if [[ -d $urls/$1  && ! -z $urls/$1 ]]
            then
              export PS3="$urls/$1>>"
              table_main $urls/$1
            
          else
            echo "database is Not Exit"
          fi
      else
          echo "Invild name of database"       
      fi
}
      
     
read -p "Enter your database to connect :" database_name
check $database_name
